<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Profile image circle style -->
    <style name="ImageStyle_circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Optional: Rounded corner style -->
    <style name="ImageStyle_Corners_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- âœ… Outlined TextInputLayout style with always-visible border -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item> <!-- Border width when not focused -->
        <item name="boxStrokeWidthFocused">2dp</item> <!-- Border width when focused -->
        <item name="boxStrokeColor">#03A9F4</item> <!-- Default border color -->
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>



</resources>
