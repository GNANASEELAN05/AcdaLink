<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_request_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request from: John Doe"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/tv_request_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Has Requested to Download Your Project"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/tv_project_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Title : War"
            android:textStyle="italic"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Status: Pending"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                app:cornerRadius="8dp"
                android:layout_marginLeft="8dp"
                app:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Reject"
                app:cornerRadius="8dp"
                app:backgroundTint="#F44336"
                android:textColor="@android:color/white"/>

            <!-- This button will be hidden for the uploader's view (Requests Received).
                 It's kept in the layout for compatibility, but the Activity will not show it. -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_download_allowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Download"
                android:visibility="gone"
                app:cornerRadius="6dp"
                app:backgroundTint="#2196F3"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
