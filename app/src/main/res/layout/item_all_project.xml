<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card:cardCornerRadius="4dp"
    card:cardElevation="0dp"
    android:background="#FFFFFF"
    card:cardBackgroundColor="#FFFFFF"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Using FrameLayout so we can overlay bookmark icon -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Main card content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_black"
            android:padding="12dp">

            <!-- Serial number + Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemSerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Title :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/itemProjectTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Project Title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Project Type -->
            <TextView
                android:id="@+id/itemProjectType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project type : N/A"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:textColor="#444444" />

            <!-- Project Level -->
            <TextView
                android:id="@+id/itemProjectLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project level : N/A"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:textColor="#444444" />

            <!-- Similarity and AI score stacked vertically -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/itemSimilarity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Similarity : 0%"
                    android:textSize="13sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/itemAiGenerated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AI generated content : 0%"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bookmark Icon in Top Right -->
        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|top"
            android:layout_margin="8dp"
            android:src="@drawable/ic_bookmark1"
            android:contentDescription="Bookmark Icon" />
    </FrameLayout>
</androidx.cardview.widget.CardView>
